source 'http://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

# Use sqlite3 as the database for Active Record
gem 'mysql2'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 1.2'

# Make beautiful controller action methods
gem 'action_args'

# Use unicorn or puma as the app server. Recommended to use :)
# gem 'unicorn'
# gem 'puma'

group :development do
  # Run 'bundle exec annotate' will adding schema definition to model files
  gem 'annotate'
  # for debug
  gem 'pry-nav'
  gem 'pry-doc'
  gem 'pry-rails'
end

# for Rspec
group :test, :development do
  gem 'rspec', '>= 2.13.0'
  gem 'rspec-rails', '>= 2.13.0'
  gem 'shoulda-matchers'
  gem 'api_matchers'
  gem 'spring'
  gem 'rb-fsevent', '~> 0.9'
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'capybara'
end
